{
    "openapi": "3.0.0",
    "info": {
        "title": "Marketplace",
        "license": {
            "name": "MIT"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost/",
            "description": "API server"
        }
    ],
    "paths": {
        "/api/aut/loginh": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login",
                "description": "Get a JWT via given credentials",
                "operationId": "App\\Http\\Controllers\\AuthController::login",
                "requestBody": {
                    "description": "Credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "description": "Get a JWT via given credentials.",
                                        "type": "string"
                                    },
                                    "password": {
                                        "description": "Get a JWT via given credentials.",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "description": "Get a JWT via given credentials.",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Missing Data"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/api/auth/me": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "About logged user",
                "description": "About Logged user",
                "operationId": "App\\Http\\Controllers\\AuthController::me",
                "responses": {
                    "200": {
                        "description": "Logged user data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "description": "Get the authenticated User.",
                                            "type": "string"
                                        },
                                        "name": {
                                            "description": "Get the authenticated User.",
                                            "type": "string"
                                        },
                                        "email": {
                                            "description": "Get the authenticated User.",
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "description": "Get the authenticated User.",
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "description": "Get the authenticated User.",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/api/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Logout",
                "description": "Log the user out",
                "operationId": "App\\Http\\Controllers\\AuthController::logout",
                "responses": {
                    "200": {
                        "description": "Logout",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "Log the user out (Invalidate the token).",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/api/auth/refresh": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Refresh",
                "description": "Refresh a token",
                "operationId": "App\\Http\\Controllers\\AuthController::refresh",
                "responses": {
                    "200": {
                        "description": "Logout",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "description": "Refresh a token.",
                                            "type": "string"
                                        },
                                        "token_type": {
                                            "description": "Refresh a token.",
                                            "type": "string"
                                        },
                                        "expires_in": {
                                            "description": "Refresh a token.",
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/api/v1/price-conversion/{amount}": {
            "get": {
                "tags": [
                    "Price-conversion"
                ],
                "summary": "List values converted from amount to valid currencies",
                "description": "Returns a json values in valid currencies",
                "operationId": "App\\Http\\Controllers\\PriceController::conversion",
                "parameters": [
                    {
                        "name": "amount",
                        "in": "path",
                        "description": "Amount to be converted",
                        "schema": {
                            "required": [
                                "amount"
                            ],
                            "type": "number",
                            "maximum": 999999,
                            "minimum": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list with currencies converted"
                    },
                    "422": {
                        "description": "Missing Data"
                    }
                }
            }
        },
        "/api/product/{productId}/prices": {
            "get": {
                "tags": [
                    "Product"
                ],
                "summary": "List prices in all valid currencies",
                "description": "Returns a json of prices in different currencies",
                "operationId": "App\\Http\\Controllers\\ProductController::showPrices",
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "description": "product id",
                        "schema": {
                            "required": [
                                "productId"
                            ],
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Prices in valid currencies"
                    },
                    "422": {
                        "description": "Missing Data"
                    }
                }
            }
        },
        "/api/product/{id}": {
            "get": {
                "tags": [
                    "Product"
                ],
                "summary": "Get a product by id",
                "description": "Returns a json of one product",
                "operationId": "App\\Http\\Controllers\\ProductController::show",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "product id",
                        "schema": {
                            "required": [
                                "id"
                            ],
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A product"
                    },
                    "422": {
                        "description": "Missing Data"
                    }
                }
            }
        },
        "/api/product": {
            "post": {
                "tags": [
                    "Product"
                ],
                "summary": "New product",
                "description": "Add a new product",
                "operationId": "App\\Http\\Controllers\\ProductController::store",
                "requestBody": {
                    "description": "Post object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProductRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "A post",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProductResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Missing Data"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ProductRequest": {
                "title": "ProductRequest",
                "required": [
                    "description",
                    "price"
                ],
                "properties": {
                    "description": {
                        "description": "Class Product",
                        "type": "string"
                    },
                    "price": {
                        "description": "Class Product",
                        "type": "number"
                    }
                },
                "type": "object"
            },
            "ProductResponse": {
                "title": "ProductResponse",
                "description": "Class Product",
                "properties": {
                    "id": {
                        "description": "Class Product",
                        "type": "string"
                    },
                    "description": {
                        "description": "Class Product",
                        "type": "string"
                    },
                    "price": {
                        "description": "Class Product",
                        "type": "number"
                    },
                    "updated_at": {
                        "description": "Class Product",
                        "type": "string"
                    },
                    "created_at": {
                        "description": "Class Product",
                        "type": "string"
                    }
                },
                "type": "object"
            }
        }
    }
}